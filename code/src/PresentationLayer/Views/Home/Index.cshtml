@using ECommerceSystem.Models; 
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Home Page";
    var categories = Enum.GetValues(typeof(Category)).Cast<Category>().Select(c => c.ToString());
}

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < categories.Count(); i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }

        </ol>
        <div class="carousel-inner">
            @for (var i = 0; i < categories.Count(); i++)
            {
                var category = categories.ElementAt(i);
                var image = "~/images/categories/" + category + ".jpg";
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Url.Content(image)" alt="@category" width="700" height="450">
                        <div class="carousel-caption d-none d-md-block bg-dark">
                            <h4>@category</h4>
                            <a class="btn btn-light m-1 " asp-controller="Product" asp-action="ProductListing" asp-route-category="@category">
                                View Category
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Url.Content(image)" alt="@category" width="700" height="450">
                        <div class="carousel-caption d-none d-md-block bg-dark">
                            <h4>@category</h4>
                            <a class="btn btn-light m-1 " asp-controller="Product" asp-action="ProductListing" asp-route-category="@category">
                                View Category
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


