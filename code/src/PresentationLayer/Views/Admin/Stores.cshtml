@model List<ECommerceSystem.Models.StoreModel>
@{
    ViewData["Title"] = "Manage Stores";
}

<<div class="container">
    <h1 style="font-family: Roboto">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table table-striped user-list">
                            <thead>
                                <tr>
                                    <th><span>Store Name</span></th>
                                    <th><span>Rater Count</span></th>
                                    <th><span>Store Rating</span></th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var store in Model)
                                {
                                    <tr>
                                        <td>
                                            @store.Name
                                        </td>
                                        <td>@store.RaterCount</td>
                                        <td>
                                            <span class="text-center">@Math.Round(store.Rating, 2)</span>
                                            <ul class="list-inline small stars">
                                                @for (var i = 0; i < Math.Round(store.Rating); i++)
                                                {
                                                    <li class="list-inline-item m-0"><span class="fa fa-star checked"></span></li>
                                                }
                                                @for (var i = 1; i <= 5 - Math.Round(store.Rating); i++)
                                                {
                                                    <li class="list-inline-item m-0"><span class="fa fa-star" style="color: grey !important"></span></li>
                                                }
                                            </ul>
                                        </td>
                                        <td style="width: 20%;">
                                            <a class="btn btn-ripple btn-success m-1" asp-controller="Admin" asp-action="StorePurchaseHistory" asp-route-store="@store.Name">
                                                <i class="fas fa-history"></i>
                                                Store Purchases
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>