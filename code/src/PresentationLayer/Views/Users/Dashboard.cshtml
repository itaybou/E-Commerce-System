@model ECommerceSystem.Models.UserModel
@{
    ViewData["Title"] = "User Dashboard";
}

    <div class="container">
        <div class="login-page form">
            <h1><span class="text-success"><i class="fas fa-users-cog"></i></span> Dashboard</h1>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="well well-sm">
                        <div class="row">
                            <div class="col-sm-12">
                                <h2>
                                    <b>Username: </b>@Model.Username
                                </h2>
                                <small>
                                    Additional details:
                                </small>
                                <p>
                                    <i class="fas fa-envelope"></i> @Model.Email
                                    <br />
                                    <i class="fas fa-user"></i> <b>Firstname: </b> @Model.Fname
                                    <br />
                                    <i class="fas fa-user"></i> <b>Lastname: </b> @Model.Lname
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>