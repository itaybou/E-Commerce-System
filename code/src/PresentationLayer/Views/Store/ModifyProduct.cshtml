@using ECommerceSystem.Utilities;
@using ECommerceSystem.Models;
@model PresentationLayer.Models.AddProductModel
@{
    ViewData["Title"] = "Modify Product";
    var storeName = ViewData["StoreName"];
    var id = ViewData["ProductID"];
    var productName = ViewData["ProductName"];
}

<div class="container">
    <div class="register-page">
        <a type="button" class="bttn btn-ripple login-btn px-lg-4 m-1" style="width: 20%" href="javascript:void(0);" id="backLink">
            <i class="fas fa-arrow-circle-left"></i>
            Go Back
        </a>
        <h2 style="font-family: Roboto">@ViewData["Title"] - @storeName</h2>
        <div class="form">
            <form asp-controller="Owner" asp-action="ModifyProduct" class="login-form" method="post">
                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }
                <div class="form-group">
                    <label style="text-align: left" for="password">New Quantity</label>
                    <input type="number" class="form-control" placeholder="New Quantity" asp-for="Quantity" />
                </div>
                <input id="productName" name="productName" type="hidden" value="@productName" />
                <input id="storeName" name="storeName" type="hidden" value="@storeName" />
                <input id="productID" name="productID" type="hidden" value="@id" />
                <button type="submit" class="w-50">Add Product Group</button>
            </form>
        </div>
    </div>
</div>