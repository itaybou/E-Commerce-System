@using ECommerceSystem.Models
@model Tuple<StoreModel, List<ProductModel>>
@{
    ViewData["Title"] = "Store Inventory";
    var store = Model.Item1;
    var products = Model.Item2;
}

    <div class="container-fluid w-75">
        <h1>@ViewData["StoreName"] - Store Inventory</h1>
        <a href="javascript:void(0);" id="backLink">
            <div class="bttn btn-ripple login-btn px-lg-4 m-1" style="width: 8%">
                <i class="fas fa-arrow-circle-left"></i>
                Go Back
            </div>
        </a>
        <div class="alert alert-info">
            <i class="fa fa-info-circle pull-right"></i>  <strong>Click control button to Modify, Remove or Add Concrete products to group.</strong>
        </div>
        <div class="row">
            <div class="col md-12">
                <h1> <i class="fa fa-shopping-cart"></i>  <small> - Manage store inventory</small></h1>
            </div>
            <div class="col justify-content-end align-self-center text-right">
                <a type="button" style="width: 200px" class="btn btn-lg btn-success" asp-controller="Owner" asp-action="AddProduct" asp-route-store="@store.Name">
                    <i class="fas fa-plus"></i><i class="fas fa-box-open"></i>Add Prodcut
                </a>
            </div>
        </div>

        <hr>

        <table class="table">
            <thead>
                <tr class="text-left">
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in products)
                {
                    <tr class="text-left">
                        <td class="w-25">@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Quantity</td>
                        <td>@product.BasePrice</td>
                        <td class="text-right align-content-end justify-content-end p-1" style="width: 300px">
                            <form type="hidden" asp-action="StoreProductListing" asp-controller="Product" method="post">
                                <button type="submit" style="width: 150px; margin: 0" class="btn btn-outline-danger">
                                    Remove <i class="fas fa-archive"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
