@if (User.IsInRole("Admin"))
{
    <span class="align-content-between m-2">
        <b>Admin controls: </b>
    </span>
    <!--User Notifications-->
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-ripple btn-outline-primary m-1" asp-controller="Admin" asp-action="Users">
            <i class="fas fa-users"></i>
            Manage Users
        </a>
        <a class="btn btn-ripple btn-outline-primary m-1" asp-controller="Admin" asp-action="Stores">
            <i class="fas fa-store-alt"></i>
            Manage Stores
        </a>
    }
    <!--/User Notifications-->
}