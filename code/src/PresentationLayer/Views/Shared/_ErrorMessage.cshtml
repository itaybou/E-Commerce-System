@model PresentationLayer.Models.ActionMessageModel;
@{
    ViewData["Title"] = "Error Message";
}
<div class="container justify-content-center align-items-center p-5 m-5">
    <div class="modal fade" id="messageModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header alert-danger">
                    <h5 class="modal-title" id="exampleModalLabel">@ViewData["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.href='@Model.RedirectPath'">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Model.Message
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-primary" onclick="location.href='@Model.RedirectPath'" value="Continue">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $("#messageModal").modal('show');
    });
</script>
<script>
window.setTimeout(function () {
        window.location.href = '@Model.RedirectPath';
}, 3000);
</script>