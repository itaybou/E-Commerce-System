@model PresentationLayer.Models.Auth.LoginModel
@using PresentationLayer.Controllers.Auth
@{
    ViewData["Title"] = "Login";
}

<div class="login-page">
    <h1 style="font-family: Roboto">Login</h1>
    <div class="form" method="post">
        <form class="login-form">
            <div class="form-group">
                <label style="text-align: left" for="password">@Html.DisplayNameFor(m => m.Username)</label>
                <input type="text" placeholder="@Html.NameFor(m => m.Username)" asp-for="Username" />
            </div>
            <div class="form-group">
                <label style="text-align: left" for="password">@Html.DisplayNameFor(m => m.Password)</label>
                <input type="password" placeholder="@Html.NameFor(m => m.Password)" asp-for="Password" />
            </div>
                <button>login</button>
                <p class="message" style="text-align: left; font-size: 16px">Not registered? <a href="#">Create an account</a></p>
        </form>
    </div>
</div>